  <!-- ADMIN area -->
  <package name="admin" namespace="/admin" extends="default">
    <default-interceptor-ref name="adminStack"/>
    <!-- catches everything that doesn't match below! -->
    <default-action-ref name=""/>

    <action name="" class="org.gbif.portal.action.admin.HomeAction">
      <result>/WEB-INF/pages/admin/home.ftl</result>
    </action>

    <action name="node/{id}" class="org.gbif.portal.action.admin.NodeAction">
      <result>/WEB-INF/pages/admin/node.ftl</result>
    </action>

    <action name="network/{id}" class="org.gbif.portal.action.admin.NetworkAction">
      <result>/WEB-INF/pages/admin/network.ftl</result>
    </action>

    <action name="organization/add" class="org.gbif.portal.action.admin.OrganizationAction" method="prepare">
      <result>/WEB-INF/pages/admin/add_organization.ftl</result>
    </action>
    
    <action name="dataset/add" class="org.gbif.portal.action.admin.DatasetAction" method="prepare">
      <result>/WEB-INF/pages/admin/add_dataset.ftl</result>
    </action>    
    
    <action name="organization/add/step" class="org.gbif.portal.action.admin.OrganizationAction" method="addOrganization">
      <result name="input">/WEB-INF/pages/admin/add_organization.ftl</result>
      <result name="success">/WEB-INF/pages/admin/success.ftl</result>
    </action>   
    
    <action name="dataset/add/step" class="org.gbif.portal.action.admin.DatasetAction" method="addDataset">
      <result name="input">/WEB-INF/pages/admin/add_dataset.ftl</result>
      <result name="success">/WEB-INF/pages/admin/success.ftl</result>
    </action>       
    
     

    <action name="organization/{id}" class="org.gbif.portal.action.admin.OrganizationAction">
      <result>/WEB-INF/pages/admin/edit_organization.ftl</result>
    </action>
    
    <action name="organization/{id}/edit" class="org.gbif.portal.action.admin.OrganizationAction" method="editOrganization">
      <result name="input">/WEB-INF/pages/admin/edit_organization.ftl</result>    
      <result name="success">/WEB-INF/pages/admin/edit_organization.ftl</result>
    </action>    
    <action name="organization/add/{1}" class="org.gbif.portal.action.admin.OrganizationAction" method="prepare">
      <result>/WEB-INF/pages/admin/{1}.ftl</result>
    </action>      
    <action name="organization/add/{1}/step" class="org.gbif.portal.action.admin.OrganizationAction" method="add{1}">
      <result name="input">/WEB-INF/pages/admin/{1}.ftl</result>          
      <result name="success">/WEB-INF/pages/admin/success.ftl</result>     
    </action>      
    <action name="dataset/{id}" class="org.gbif.portal.action.admin.DatasetAction">
      <result>/WEB-INF/pages/admin/dataset.ftl</result>
    </action>

  </package>
</struts>
